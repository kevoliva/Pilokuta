{% extends 'base.html.twig' %}

{% block title %}Serie{% endblock %}

{% block body %}
<center class = "display-4">Serie</center><br><br>

    <table class="table table-dark">
        <tbody>
            <tr>
                <th>Nom de la série</th>
                <td>{{ serie.libelle }}</td>
            </tr>
        </tbody>
    </table>
    <hr>
<center class = "display-4">Poule(s) associée(s)</center><br><br>
<table class="table table-dark">
    <tbody>
        {% for poule in serie.poules %}
        <tr>
            <th>Nom de la poule</th>
            <td>{{ poule.libelle }}</td>
        </tr>
        {% endfor %}
    </tbody>
</table> <br> <br>
<center>
<a href="{{ path('series_index_tournoi', {'idTournoi': serie.tournoi.id}) }}"> <input type="button" class="btn btn-info" value="Retour"> </a> &nbsp; &#160; &#160;

<a href="{{ path('modify_serie', {'id': serie.id}) }}"><input type="button" class="btn btn-info" value="Modifier"></a><br><br>

{{ include('serie/_delete_form.html.twig') }}
</center>
{% endblock %}
