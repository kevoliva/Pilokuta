{% extends 'base.html.twig' %}

{% block body %}
<center>
{% if action == "ajouter" %}
<h3 class = "display-4">
    Enregistrez votre nouvelle Série
</h3>
{% else %}
<h3 class = "display-4">
    Modifiez votre Série
</h3>
{% endif %}
</br></br>
</center>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-9">
                {{ form_start(vueFormulaire) }}
                <H4>Series</H4>
                {{ form_row(vueFormulaire.libelle) }}

                <H4>Poules</H4>
                <ul class="poules" data-prototype="{{ form_widget(vueFormulaire.poules.vars.prototype)|e('html_attr') }}">
                {% for poule in vueFormulaire.poules %}
                <li>{{ form_row(poule.libelle, {'attr' : {'placeholder':"Poule 3"}}) }}</li>
                {% endfor %}
                </ul>
                {% if action == "ajouter" %}
                <button type="submit" class="btn btn-dark">Créer</button>
                {% else %}
                <button type="submit" class="btn btn-dark">Enregistrer</button>
                {% endif %} 
                {{ form_end(vueFormulaire) }}

            </div>
        </div>
    </div>
{% endblock %}