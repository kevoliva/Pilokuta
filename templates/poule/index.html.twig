{% extends 'base.html.twig' %}

{% block title %}Index des Poules{% endblock %}

{% block body %}
    <center class="display-4">Les Poules de votre série</center><br><br>

    <table class="table table-dark">
        <thead>
            <tr>
                <th>Libelle</th>
                <th>Possibilités</th>
            </tr>
        </thead>
        <tbody>
        {% for poule in poules %}
            <tr>
                <td>{{ poule.libelle }}</td>
                <td>
                    <a href="{{ path('poule_show', {'id': poule.id}) }}"><button type="button" class="btn btn-outline-light">Voir les détails</button></a>
                    <hr>
                    <a href="{{ path('modify_poule', {'id': poule.id}) }}"><button type="button" class="btn btn-outline-light">Modifier poule</button></a>
                    <hr>
                    <a href="{{ path('equipes_index_poule', {'idPoule': poule.id})}}"><button type="button" class="btn btn-outline-light">Affiche les équipes correspondantes</button></a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Vous n'avez rentré aucune poule</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
     <center>
    <a href="{{ path('add_poule_serie', {'idSerie': pouleAjout.serie.id}) }}"> <input type="button" class="btn btn-info" value="Ajouter une poule"> </a>
    </center>
{% endblock %}
